<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
id="com.yellowpimento.kiosque" versionCode="10" version="1.0.8">
    <name>Woluwe Shopping Magazine</name>
    <description>A HTML5 Magazine Reader WSC</description>
    <author href="http://yellowpimento.com"
    email="denis@yellowpimento.com">Yellow Pimento</author>
    
    <preference name="phonegap-version" value="3.2.0" />
    <preference name="stay-in-webview" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="SplashScreen" value="splash"/>
    <access origin="*" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    

    <icon gap:platform="ios" height="57" src="res/1/ios/icon/icon.png" width="57"/>
    <icon gap:platform="ios" height="60" src="res/1/ios/icon/icon-60.png" width="60"/>
    <icon gap:platform="ios" height="72" src="res/1/ios/icon/icon-72.png" width="72" />
    <icon gap:platform="ios" height="76" src="res/1/ios/icon/icon-76.png" width="76" /> 
    <icon gap:platform="ios" height="114" src="res/1/ios/icon/icon@2x.png" width="114" />
    <icon gap:platform="ios" height="120" src="res/1/ios/icon/icon-60@2x.png" width="120" />
    <icon gap:platform="ios" height="144" src="res/1/ios/icon/icon-72@2x.png" width="144" />
    <icon gap:platform="ios" height="152" src="res/1/ios/icon/icon-76@2x.png" width="152" />
    
    <gap:splash gap:platform="ios" height="2008" src="res/1/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
    <gap:splash gap:platform="ios" height="1496" src="res/1/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
    
    
    <gap:plugin name="org.apache.cordova.core.splashscreen" />
    <gap:plugin name="org.apache.cordova.core.file" />
    <gap:plugin name="org.apache.cordova.core.file-transfer" />
    <gap:plugin name="org.apache.cordova.core.network-information" />
    <gap:plugin name="org.apache.cordova.core.inappbrowser" />
    <gap:plugin name="org.apache.cordova.core.device" />
    
</widget>